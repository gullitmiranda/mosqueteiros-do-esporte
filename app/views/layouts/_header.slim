header#header-page role="banner"

  #header-page-inner

    - if request.fullpath == root_path
      .logo-page Mosqueteiros do Esporte
    - else
      .logo-page
        a href="#{{root_path}}" title="Mosqueteiros do Esporte" Mosqueteiros do Esporte

    nav.nav-page role="navigation"
      ul
        li.o_que
          a href="/o-que-e" title="O que é o mosqueteiros?" <b>O que é</b> <span>o Mosqueteiros?</span>
        li.conheca
          a href="#{projects_path}" title="Conheça grandes atletas" <b>Conheça</b> <span>grandes atletas</span>
        li.seja_um
          a href="/seja-um-atleta" title="Seja um atleta patrocinado" <b>Seja um</b> <span>atleta patrocinado</span>

    nav.nav-user role="navigation"
      ul
        - if current_user.present?
          li.item-avatar
            .user-avatar.small
              .user-avatar-inner
                a href="#{{credits_payments_path}}"
                  == image_tag(current_user.avatar.regular, width: 32, height: 32)

          li.item-username
            a.username href="#{{credits_payments_path}}"
              | <b>#{{current_user.name.split(" ").first}} #{{current_user.name.split(" ").last}}</b>
            - if current_user.payments.any?
              = link_to 'Minha Conta', credits_payments_path

          li.item-logout
            a href="#{{destroy_user_session_path}}" title="Sair" Sair
        - else
          li.item-login
            a href="#{{user_omniauth_connect_path(:facebook)}}" title="Entrar com o Facebook" class="popup button facebook-connect" data-width="600" data-height="400" Entrar com Facebook